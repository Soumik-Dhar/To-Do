<%- include("header"); -%>

<div class="box" id="heading">
  <h2> <%= listTitle %> </h2>
</div>

<div class="box">

  <% for(const task of newTasks) { %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="deleteItem" value="<%= task._id %>" onChange="this.form.submit()">
      <p> <%= task.name %> </p>
    </div>
    <input type="hidden" name="listName" value="<%= listTitle %>">
  </form>
  <% } %>

  <form class="item" action="/" method="post">
    <input type="text" name="addItem" placeholder="Enter Task" autocomplete="off">
    <button type="submit" name="listName" value="<%= listTitle %>">+</button>
  </form>

</div>

<%- include("footer"); -%>
